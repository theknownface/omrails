<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin %></td>
	<p class="description">
		<%= pin.description %></td>
	</p>
	<p>
		<strong>
			Posetd by <%= pin.user.name %>
		</strong>
	</p>	
	<% if current_user == pin.user %>
		<p>
			<%= link_to 'Edit', edit_pin_path(pin) %></td>
			<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<p>
	<% end %>
</div>
